            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="HardcodedDebugMode"
            tools:replace="android:debuggable">
        <activity android:name=".imageToPdf.ImageToPdfActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".location.CurrentLocationActivity"></activity>
        <activity android:name=".android_o.NFeatureActivity" />
        <activity android:name=".android_p.PFeatureActivity" />
