        <activity android:name=".navigation.welcome.WelcomeMeActivity" />
        <activity android:name=".saveApplicationState.SaveSateOfActivity" />
        <activity android:name=".dagger2.Dagger2Activity" />
        <activity android:name=".communicationWithWebview.MyWebViewActivity" />
        <activity android:name=".security.biometricAuth.BiometricAuthActivity" />
        <activity android:name=".security.encriptedSharedPreference.EncriptedSharedPrefActivity" />
        <activity android:name=".activitylifecycle.LifecycleActivity" />
        <activity android:name=".launchmode.LuncherActivityB" />
        <activity android:name=".launchmode.LuncherActivityA" />
        <activity android:name=".testing.TestingActivity" />
        <activity android:name=".security.SecurityActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".xmlParsing.XmlParseActivity">

        </activity>

        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="spm.androidworld.all.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/paths_provider" />
        </provider>

    </application>

</manifest>