<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="spm.androidworld.all.SearchContainerFragment">

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/appCompatEditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <fragment
            android:id="@+id/fragmentWithSearchWidget"
            android:name="spm.androidworld.all.autoAddressSearch.AddressSearchFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appCompatEditText2"
            tools:layout_editor_absoluteX="16dp" />


    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/appCompatEditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentWithSearchWidget" />


</androidx.constraintlayout.widget.ConstraintLayout>